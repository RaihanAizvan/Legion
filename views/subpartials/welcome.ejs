    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize particles.js with white/blue particles
            particlesJS('particles-js', {
                particles: {
                    number: { value: 30, density: { enable: true, value_area: 800 } },
                    color: { value: ["#ffffff", "#4f46e5", "#3b82f6", "#8b5cf6"] },
                    shape: { type: "circle", stroke: { width: 0, color: "#000000" } },
                    opacity: { value: 0.5, random: true },
                    size: { value: 5, random: true },
                    line_linked: { enable: true, distance: 150, color: "#ffffff", opacity: 0.4, width: 1 },
                    move: { enable: true, speed: 1, direction: "none", random: true, straight: false, out_mode: "out" }
                },
                interactivity: {
                    detect_on: "canvas",
                    events: {
                        onhover: { enable: true, mode: "repulse" },
                        onclick: { enable: true, mode: "push" }
                    },
                    modes: {
                        repulse: { distance: 100, duration: 0.4 },
                        push: { particles_nb: 4 }
                    }
                }
            });
        });


        // legiontext
        document.addEventListener('DOMContentLoaded', function () {
            const letters = ['L', 'E', 'G', 'I', 'O', 'N'];
            let currentIndex = 0;

            function alternateGlow() {
                // Reset all letters
                letters.forEach(letter => {
                    const el = document.getElementById(`letter-${letter}`);
                    el.classList.remove('animate-glow');
                    el.classList.add('animate-float');
                    el.style.textShadow = '0 0 5px #fff';
                    el.classList.remove('text-white');
                    el.classList.add('text-gray-300');
                });

                // Apply glow to current letter
                const currentLetter = document.getElementById(`letter-${letters[currentIndex]}`);
                currentLetter.classList.remove('animate-float');
                currentLetter.classList.add('animate-glow');
                currentLetter.style.textShadow = '0 0 10px #fff, 0 0 15px #fff, 0 0 20px #4f46e5';
                currentLetter.classList.remove('text-gray-300');
                currentLetter.classList.add('text-white');

                // Move to next letter
                currentIndex = (currentIndex + 1) % letters.length;
            }

            // Start the alternating glow effect
            setInterval(alternateGlow, 500);
        });
        //typing effect
        document.addEventListener('DOMContentLoaded', function () {
            const text = "legionmc.space";
            const element = document.getElementById('server-ip');
            let index = 0;

            function typeEffect() {
                if (index < text.length) {
                    element.textContent = text.substring(0, index + 1);
                    element.innerHTML += '<span class="typing-cursor animate-blink">|</span>';
                    index++;
                    setTimeout(typeEffect, 150);
                } else {
                    element.textContent = text;
                    element.innerHTML += '<span class="typing-cursor animate-blink">|</span>';
                }
            }

            typeEffect();
        });
    </script>
    <style>
        .animate-pulse-slow {
